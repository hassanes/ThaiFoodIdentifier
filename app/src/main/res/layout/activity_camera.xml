<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/materialGray"
    tools:context="com.apps.hassan.thaifoodidentifier.CameraActivity">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <com.wonderkiln.camerakit.CameraView
        android:id="@+id/camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        app:ckJpegQuality="100"
        app:ckPinchToZoom="true"
        app:ckFocus="tapWithMarker"
        />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnDetectObject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="20dp"
            app:backgroundTint="@color/materialGray"
            app:fabSize="auto"
            android:elevation="0dp"
            android:src="@drawable/ic_button_camera"
            />

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
